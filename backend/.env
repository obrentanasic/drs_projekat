# ==================== FLASK ENVIRONMENT ====================
FLASK_ENV=development                        # development, testing, production
FLASK_DEBUG=1                                # 1 za debug mode, 0 za production
PORT=5000
SECRET_KEY=quiz-platform-super-secret-key-2024-change-in-production

# ==================== DATABASE ====================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quizplatform_db1

# ==================== JWT AUTHENTICATION ====================
JWT_SECRET_KEY=jwt-super-secret-key-change-this-in-production-2024
JWT_ACCESS_TOKEN_EXPIRES=3600                # 1 sat u sekundama
JWT_REFRESH_TOKEN_EXPIRES=604800             # 7 dana u sekundama

# ==================== REDIS (za caching i rate limiting) ====================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==================== RATE LIMITING  ====================
RATE_LIMIT_ENABLED=1                         # 1 = uključeno, 0 = isključeno
RATE_LIMIT_LOGIN_ATTEMPTS=3                  #  3 neuspešna pokušaja
RATE_LIMIT_BLOCK_MINUTES_PRODUCTION=15       # 15 minuta za produkciju
RATE_LIMIT_BLOCK_MINUTES_TEST=1              # 1 minut za testiranje

# ==================== LOGIN SECURITY (backward compatibility) ====================
LOGIN_ATTEMPT_LIMIT=3                        # Alias za RATE_LIMIT_LOGIN_ATTEMPTS
LOGIN_BLOCK_TIME=60                          # Alias za RATE_LIMIT_BLOCK_MINUTES_TEST (1 min)

# ==================== EMAIL CONFIGURATION ====================
SMTP_SERVER=quiz_mailhog          # Na Windows hostu
SMTP_PORT=1025                 # Host port za MailHog (11025 → 1025)
SMTP_USERNAME=                  
SMTP_PASSWORD=                 
FROM_EMAIL=noreply@quizplatform.com
EMAIL_ENABLED=1                
# ==================== FILE UPLOAD ====================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880                        # 5 MB u bytovima
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif

# ==================== CORS (Cross-Origin Resource Sharing) ====================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================== LOGGING ====================
LOG_LEVEL=INFO

# ==================== PASSWORD SECURITY ====================
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=1
PASSWORD_REQUIRE_LOWERCASE=1
PASSWORD_REQUIRE_DIGITS=1
PASSWORD_REQUIRE_SPECIAL=1

# ==================== SESSION SECURITY ====================
SESSION_COOKIE_SECURE=0                      # 1 za production (HTTPS), 0 za development
SESSION_COOKIE_HTTPONLY=1
SESSION_COOKIE_SAMESITE=Lax

# ==================== WEB SOCKET CONFIGURATION ====================
WEBSOCKET_PING_INTERVAL=25
WEBSOCKET_PING_TIMEOUT=60

# ==================== FEATURE FLAGS ====================
FEATURE_RATE_LIMITING=1                      # Rate limiting za login
FEATURE_EMAIL_NOTIFICATIONS=0                # Email obaveštenja isključeno
FEATURE_FILE_UPLOAD=1                        # Upload profilnih slika
FEATURE_WEBSOCKET=1                          # WebSocket za real-time notifikacije
FEATURE_ADMIN_NOTIFICATIONS=1                # Notifikacije adminu za kvizove

# ==================== ADMIN DEFAULTS ====================
ADMIN_EMAIL=admin@quizplatform.com
ADMIN_PASSWORD=Admin123!                     
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# ==================== APPLICATION INFO ====================
APP_NAME=QuizPlatform
APP_VERSION=1.0.0
APP_DESCRIPTION=Distribuirani računarski sistemi 2025/2026