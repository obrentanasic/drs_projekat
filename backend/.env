# ==================== FLASK ====================
SECRET_KEY=quiz-platform-super-secret-key-2024-change-in-production
FLASK_DEBUG=1
PORT=5000

# ==================== DATABASE ====================
DATABASE_URL=postgresql://quiz_user:quiz_password@postgres:5432/quizplatform_db1

# ==================== JWT ====================
JWT_SECRET_KEY=jwt-super-secret-key-change-this-in-production-2024
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=604800

# ==================== REDIS ====================
REDIS_URL=redis://redis:6379/0

# ==================== LOGIN SECURITY ====================
LOGIN_ATTEMPT_LIMIT=3
LOGIN_BLOCK_TIME=60

# ==================== EMAIL ====================
# MAILHOG ZA WINDOWS - ISPRAVLJENO!
SMTP_SERVER=localhost           # Na Windows hostu
SMTP_PORT=11025                 # Host port za MailHog (11025 → 1025)
SMTP_USERNAME=                  # Prazno za MailHog
SMTP_PASSWORD=                  # Prazno za MailHog
FROM_EMAIL=noreply@quizplatform.com
EMAIL_ENABLED=1                 # BITNO: UKLJUČENO!

# ==================== UPLOAD ====================
UPLOAD_FOLDER=uploads
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS={'png', 'jpg', 'jpeg', 'gif'}

# ==================== CORS ====================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================== LOGGING ====================
LOG_LEVEL=INFO